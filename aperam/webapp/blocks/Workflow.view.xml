<mvc:View controllerName="com.aperam.aperam.blocks.Workflow"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.suite.ui.commons"
    xmlns:l="sap.ui.layout.form">

    <html:div>
        <m:Panel>
            <ProcessFlow
                id="processflow1"
                scrollable="false"
                foldedCorners="true"
                nodePress="onNodePress"
                nodes="{stepsModel>/nodes}"
                lanes="{stepsModel>/lanes}">
                <nodes>
                    <ProcessFlowNode
                        laneId="{stepsModel>lane}"
                        nodeId="{stepsModel>id}"
                        title="{stepsModel>title}"
                        titleAbbreviation="{stepsModel>names}"
                        children="{stepsModel>children}"
                        state="{stepsModel>state}"
                        stateText="{stepsModel>stateText}"
                        texts="{stepsModel>texts}"
                        highlighted="{stepsModel>highlighted}"
                        focused="{stepsModel>focused}" />
                </nodes>
                <lanes>
                    <ProcessFlowLaneHeader
                        laneId="{stepsModel>laneId}"
                        iconSrc="{stepsModel>iconSrc}"
                        text="{stepsModel>text}"
                        position="{stepsModel>position}" />
                </lanes>
            </ProcessFlow>
            <ProcessFlow
                id="processflow2"
                scrollable="false"
                nodes="{pf2>/nodes}"
                lanes="{pf2>/lanes}"
                headerPress="onHeaderPress">
                <nodes>
                    <ProcessFlowNode
                        laneId="{pf2>lane}"
                        nodeId="{pf2>id}"
                        title="{pf2>title}"
                        children="{pf2>children}"
                        state="{pf2>state}"
                        stateText="{pf2>stateText}"
                        texts="{pf2>texts}"
                        focused="{pf2>focused}" />
                </nodes>
                <lanes>
                    <ProcessFlowLaneHeader
                        laneId="{pf2>laneId}"
                        iconSrc="{pf2>iconSrc}"
                        text="{pf2>text}"
                        position="{pf2>position}" />
                </lanes>
            </ProcessFlow>
        </m:Panel>
    </html:div>
</mvc:View>
